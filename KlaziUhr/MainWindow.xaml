<Window x:Class="KlaziUhr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KlaziUhr"
        mc:Ignorable="d"
        Title="Klassenzimmer Uhr"
        Height="580"
        Width="1000"
        FontSize="20"
        Foreground="#FFFFFF"
        Icon="Resources/icon.ico">

    <Window.Background>
        <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
            <GradientStop x:Name="backgroundUp" Color="#FF7FF4" Offset="0.0" />
            <GradientStop x:Name="backgroundDown" Color="#5E5EFF" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>
<!--
